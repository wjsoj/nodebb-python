# NodeBB API Configuration
# Copy this file to .env and fill in your values

# Forum base URL (required)
NODEBB_BASE_URL=http://localhost:4567

# Authentication credentials for username/password login (recommended)
NODEBB_USERNAME=your_username
NODEBB_PASSWORD=your_password

# Or use Bearer Token authentication (alternative)
# NODEBB_USER_TOKEN=your_user_token_here

# Or use Master Token authentication (alternative)
# NODEBB_MASTER_TOKEN=your_master_token_here
# NODEBB_UID=123

# Optional settings
NODEBB_TIMEOUT=30
NODEBB_VERIFY_SSL=false